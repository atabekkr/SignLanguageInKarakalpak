<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_added_location"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/normal_150">

    <View
        android:layout_width="60dp"
        android:layout_height="@dimen/small_50"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/small_100"
        android:background="@drawable/bg_curtain_of_bottom_sheet" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="@dimen/normal_100"
        android:layout_marginTop="@dimen/normal_100"
        android:fontFamily="@font/font_mont_medium"
        android:text="@string/your_result"
        android:textColor="@color/typography_primary"
        android:textSize="@dimen/normal_text_125" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/small_100"
        android:layout_marginStart="@dimen/normal_100"
        android:backgroundTint="@color/brand_color_1"
        android:paddingVertical="@dimen/normal_100"
        android:fontFamily="@font/font_mont_medium"
        android:text="@string/procced"
        android:textAllCaps="false"
        app:cornerRadius="@dimen/small_150" />

</LinearLayout>