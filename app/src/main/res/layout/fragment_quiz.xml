<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".ui.QuizFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/typography_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_toolbar"
            android:paddingHorizontal="@dimen/small_125">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/standard_icon_width_height"
                android:layout_height="@dimen/standard_icon_width_height"
                android:layout_gravity="center"
                android:background="@drawable/btn_ripple_effect"
                android:padding="@dimen/small_125"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/normal_100"
                android:fontFamily="@font/font_mont_semi_bold"
                android:text="Quiz"
                android:textColor="@color/typography_primary"
                android:textSize="@dimen/medium_size_text" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@drawable/toolbar_shadow" />

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_rec_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/normal_100"
        android:layout_marginTop="@dimen/normal_100"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/small_125"
        app:cardElevation="@dimen/small_100">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_rec_1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/normal_100"
                android:background="@drawable/bg_start_lesson"
                android:padding="@dimen/small_100"
                android:src="@drawable/ic_by_sign_lang"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title_rec_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_100"
                android:layout_marginEnd="@dimen/small_100"
                android:fontFamily="@font/font_mont_semi_bold"
                android:text="Im-ishara boyinsha"
                android:textColor="@color/typography_primary"
                android:textSize="@dimen/normal_text_100"
                app:layout_constraintBottom_toBottomOf="@id/iv_rec_1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_rec_1"
                app:layout_constraintTop_toTopOf="@id/iv_rec_1" />

            <View
                android:id="@+id/line_rec1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/normal_100"
                android:layout_marginTop="@dimen/small_100"
                android:background="@color/typography_tertiary"
                app:layout_constraintTop_toBottomOf="@id/iv_rec_1" />

            <ImageView
                android:id="@+id/iv_play1"
                android:layout_width="@dimen/normal_100"
                android:layout_height="@dimen/normal_100"
                android:layout_marginVertical="@dimen/normal_100"
                android:src="@drawable/ic_play"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/line_rec1"
                app:layout_constraintTop_toBottomOf="@id/line_rec1"
                app:tint="@color/brand_color_lighter_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_100"
                android:clickable="false"
                android:fontFamily="@font/font_mont_semi_bold"
                android:text="Начать"
                android:textColor="@color/brand_color_lighter_1"
                android:textSize="@dimen/normal_text_100"
                app:layout_constraintBottom_toBottomOf="@id/iv_play1"
                app:layout_constraintStart_toEndOf="@id/iv_play1"
                app:layout_constraintTop_toTopOf="@id/iv_play1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/normal_100"
        android:layout_marginTop="@dimen/normal_100"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/small_125"
        app:cardElevation="@dimen/small_100">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_rec_2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/normal_100"
                android:background="@drawable/bg_icon_topic_2"
                android:padding="@dimen/small_100"
                android:src="@drawable/ic_by_word"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title_rec_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_100"
                android:layout_marginEnd="@dimen/small_100"
                android:fontFamily="@font/font_mont_semi_bold"
                android:text="Харип бойынша"
                android:textColor="@color/typography_primary"
                android:textSize="@dimen/normal_text_100"
                app:layout_constraintBottom_toBottomOf="@id/iv_rec_2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_rec_2"
                app:layout_constraintTop_toTopOf="@id/iv_rec_2" />

            <View
                android:id="@+id/line_rec2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/normal_100"
                android:layout_marginTop="@dimen/small_100"
                android:background="@color/typography_tertiary"
                app:layout_constraintTop_toBottomOf="@id/iv_rec_2" />

            <ImageView
                android:id="@+id/iv_play2"
                android:layout_width="@dimen/normal_100"
                android:layout_height="@dimen/normal_100"
                android:layout_marginVertical="@dimen/normal_100"
                android:src="@drawable/ic_play"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/line_rec2"
                app:layout_constraintTop_toBottomOf="@id/line_rec2"
                app:tint="@color/brand_color_lighter_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_100"
                android:clickable="false"
                android:fontFamily="@font/font_mont_semi_bold"
                android:text="Начать"
                android:textColor="@color/brand_color_lighter_1"
                android:textSize="@dimen/normal_text_100"
                app:layout_constraintBottom_toBottomOf="@id/iv_play2"
                app:layout_constraintStart_toEndOf="@id/iv_play2"
                app:layout_constraintTop_toTopOf="@id/iv_play2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/normal_100"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="@dimen/small_125"
        app:cardElevation="@dimen/small_100">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_rec_3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="@dimen/normal_100"
                android:background="@drawable/bg_card_wrong_or_right"
                android:padding="@dimen/small_100"
                android:src="@drawable/ic_wrong_or_right"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title_rec_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/normal_100"
                android:layout_marginEnd="@dimen/small_100"
                android:fontFamily="@font/font_mont_semi_bold"
                android:text="Дурыс кате"
                android:textColor="@color/typography_primary"
                android:textSize="@dimen/normal_text_100"
                app:layout_constraintBottom_toBottomOf="@id/iv_rec_3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/iv_rec_3"
                app:layout_constraintTop_toTopOf="@id/iv_rec_3" />

            <View
                android:id="@+id/line_rec3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="@dimen/normal_100"
                android:layout_marginTop="@dimen/small_100"
                android:background="@color/typography_tertiary"
                app:layout_constraintTop_toBottomOf="@id/iv_rec_3" />

            <ImageView
                android:id="@+id/iv_play3"
                android:layout_width="@dimen/normal_100"
                android:layout_height="@dimen/normal_100"
                android:layout_marginVertical="@dimen/normal_100"
                android:src="@drawable/ic_play"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/line_rec3"
                app:layout_constraintTop_toBottomOf="@id/line_rec3"
                app:tint="@color/brand_color_lighter_1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/small_100"
                android:clickable="false"
                android:fontFamily="@font/font_mont_semi_bold"
                android:text="Начать"
                android:textColor="@color/brand_color_lighter_1"
                android:textSize="@dimen/normal_text_100"
                app:layout_constraintBottom_toBottomOf="@id/iv_play3"
                app:layout_constraintStart_toEndOf="@id/iv_play3"
                app:layout_constraintTop_toTopOf="@id/iv_play3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>